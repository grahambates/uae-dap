{
  "name": "mame-m68k-dap",
  "version": "1.1.5",
  "description": "Debug Adapter Protocol for m68k platforms in MAME",
  "main": "out/index.js",
  "displayName": "MAME m68k Debugger",
  "license": "GNU General Public License v3.0",
  "homepage": "https://github.com/matthiesenj/mame-m68k-dap",
  "bugs": {
    "url": "https://github.com/matthiesenj/mame-m68k-dap/issues"
  },
  "publisher": "gigabates",
  "engines": {
    "node": "*",
    "vscode": "^1.84.2"
  },
  "categories": [
    "Debuggers"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "activationEvents": [
    "onDebug",
    "onLanguage:m68k",
    "workspaceContains:**/*.{s,S,asm,ASM}"
  ],
  "bin": "cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/matthiesenj/mame-m68k-dap"
  },
  "keywords": [
    "m68k",
    "68000",
    "assembly",
    "asm",
    "dap",
    "debug",
    "mame"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "m68k"
      }
    ],
    "debuggers": [
      {
        "type": "mame-m68k-debugger",
        "label": "MAME m68k Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Local path of ROM",
                "default": "${workspaceFolder}/build/myprogram.rom"
              },
              "mappings": {
                "type": "string",
                "description": "Path of mappings file generated by vlink with -M option",
                "default": "${workspaceFolder}/build/mappings.txt"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop target after launch",
                "default": false
              },
              "noDebug": {
                "type": "boolean",
                "description": "Just launch emulator without debugging",
                "default": false
              },
              "trace": {
                "type": "boolean",
                "description": "Enable verbose logging",
                "default": false
              },
              "serverName": {
                "type": "string",
                "description": "Host name of the debug server",
                "default": "localhost"
              },
              "serverPort": {
                "type": "number",
                "description": "Port number of the debug server",
                "default": 2345
              },
              "exceptionMask": {
                "type": "number",
                "description": "Mask used to catch the exceptions",
                "default": 60
              },
              "vasm": {
                "properties": {
                  "parseSource": {
                    "type": "boolean"
                  },
                  "binaryPath": {
                    "type": "string"
                  },
                  "args": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "title": "vasm option"
                    },
                    "default": [],
                    "description": "Vasm CLI args"
                  }
                }
              },
              "emulatorBin": {
                "type": "string",
                "description": "Path of emulator executable (default: use bundled version)"
              },
              "emulatorArgs": {
                "type": "array",
                "items": {
                  "type": "string",
                  "title": "Emulator option"
                },
                "default": [],
                "description": "Additional CLI args to pass to emulator program. Remote debugger args are added automatically"
              }
            }
          },
          "attach": {
            "properties": {
              "mappings": {
                "type": "string",
                "description": "Path of mappings file generated by vlink with -M option"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop target after launch",
                "default": false
              },
              "trace": {
                "type": "boolean",
                "description": "Enable verbose logging",
                "default": false
              },
              "serverName": {
                "type": "string",
                "description": "Host name of the debug server",
                "default": "localhost"
              },
              "serverPort": {
                "type": "number",
                "description": "Port number of the debug server",
                "default": 2345
              },
              "exceptionMask": {
                "type": "number",
                "description": "Mask used to catch the exceptions",
                "default": 60
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mame-m68k-debugger",
            "request": "launch",
            "name": "MAME m68k: Debug",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/build/myprogram.rom",
            "mappings": "${workspaceFolder}/build/mappings.txt",
            "emulatorArgs": [],
            "preLaunchTask": "build"
          },
          {
            "type": "mame-m68k-debugger",
            "request": "launch",
            "name": "MAME m68k: Run",
            "noDebug": true,
            "program": "${workspaceFolder}/build/myprogram.rom",
            "mappings": "${workspaceFolder}/build/mappings.txt",
            "emulatorArgs": [],
            "preLaunchTask": "build"
          }
        ],
        "configurationSnippets": [
          {
            "label": "MAME m68k: Debug",
            "description": "A new configuration for debugging a program in MAME.",
            "body": {
              "type": "mame-m68k-debugger",
              "request": "launch",
              "name": "MAME m68k: Debug",
              "stopOnEntry": false,
              "rom": "^\"\\${workspaceFolder\\}/build/myprogram.rom\"",
              "mappings": "^\"\\${workspaceFolder\\}/build/mappings.txt\"",
              "emulatorArgs": [],
              "preLaunchTask": "build"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "check": "npm run lint && npm run type-check && npm run test",
    "build": "npm run esbuild -- --minify",
    "build-dev": "npm run esbuild -- --sourcemap",
    "watch": "npm run esbuild -- --sourcemap --watch",
    "esbuild": "esbuild ./src/index.ts ./src/debugAdapter.ts --bundle --outdir=./out --external:vscode --platform=node",
    "type-check": "npm run build -- --noEmit",
    "clean": "rimraf ./out/*",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prepack": "npm run build",
    "vscode:prepublish": "npm run build",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.55.1",
    "@vscode/debugprotocol": "^1.55.1",
    "async-mutex": "^0.4.0",
    "devtools-protocol": "0.0.1056733",
    "expression-eval": "^5.0.0",
    "glob": "^8.0.1",
    "promise-retry": "^2.0.1",
    "temp": "^0.9.4"
  },
  "devDependencies": {
    "@johanblumenberg/ts-mockito": "^1.0.32",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.31",
    "@types/promise-retry": "^1.1.3",
    "@types/temp": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vscode/debugadapter-testsupport": "^1.55.1",
    "esbuild": "^0.25.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "vscode": "^1.1.37"
  }
}
